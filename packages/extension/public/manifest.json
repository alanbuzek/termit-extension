{
  "short_name": "Termit Extension",
  "name": "Termit Extension",
  "description": "Termit annotations anywhere on the web",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "/static/js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "/static/img/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/static/css/content.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "icons": {
    "16": "/static/img/icon16.png",
    "48": "/static/img/icon48.png",
    "128": "/static/img/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/static/css/bootstrap-termit.css",
        "/static/css/annotator.css",
        "/static/css/styles.css",
        "/static/img/*"
      ],
      "matches": ["<all_urls>"],
      "extension_ids": ["fcjdbebldbibeepgebafdghhdcneeaip"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "*://*/*"
  ]
}
