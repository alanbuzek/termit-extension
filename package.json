{
    "name": "my-network",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start:api": "npm run start --prefix packages/api",
        "dev:api": "npm run dev --prefix packages/api",
        "start:web": "npm run dev --prefix packages/web",
        "dev": "concurrently \"npm run dev:api\" \"npm run start:web\"",
        "ext": "npm run watch --prefix packages/extension", 
        "deploy:api": "git subtree push --prefix api heroku master",
        "ins": "lerna run install",
        "gen": "graphql-codegen --config codegen.yml"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "1.17.7",
        "@graphql-codegen/typescript": "1.17.7",
        "@graphql-codegen/typescript-operations": "1.17.7",
        "@graphql-codegen/typescript-react-apollo": "^2.2.3",
        "@graphql-codegen/typescript-urql": "^2.0.5",
        "concurrently": "^5.3.0",
        "lerna": "^2.11.0"
    },
    "dependencies": {
        "@graphql-codegen/typescript-resolvers": "^1.19.0",
        "autoprefixer": "^10.2.6",
        "postcss": "^8.3.4",
        "tailwindcss": "^2.1.4"
    }
}
